contract Ownable {
  address public owner;
  address public ceo;
  address public cto;
  address public cfo;
  
  event OwnershipTransferred(address indexed previousOwner, address indexed newOwner);

  constructor() public {
    owner = msg.sender;
  }

  modifier onlyOwner() {
    require(msg.sender == owner);
    _;
  }

  modifier onlyCEO() {
    require(msg.sender == ceo);
    _;
  }

  modifier onlyCFO() {
    require(msg.sender == cfo);
    _;
  }

  modifier onlyCTO() {
    require(msg.sender == cto);
    _;
  }

  modifier onlyCXO() {
    require(msg.sender == cto || msg.sender == cfo || msg.sender == cfo);
    _;
  }

  function transferOwnership(address newOwner) public onlyOwner {
    require(newOwner != address(0));
    emit OwnershipTransferred(owner, newOwner);
    owner = newOwner;
  }

  function transferCEO(address newCEO) public {
    require(newCEO != address(0));

    // 如果原来的CEO没有设置 则sender必须是owner 否则必须是原来的CEO
    if(ceo == address(0)) {
        require(msg.sender == owner);
    }else{
        require(msg.sender == ceo);
    }
    emit OwnershipTransferred(ceo, newCEO);
    ceo = newCEO;
  }

  function transferCFO(address newCFO) public {
    require(newCFO != address(0));

    // 如果原来的CFO没有设置 则sender必须是owner 否则必须是原来的CFO
    if(cfo == address(0)) {
        require(msg.sender == owner);
    }else{
        require(msg.sender == cfo);
    }
    emit OwnershipTransferred(cfo, newCFO);
    cfo = newCFO;
  }

  function transferCTO(address newCTO) public {
    require(newCTO != address(0));

    // 如果原来的CTO没有设置 则sender必须是owner 否则必须是原来的CTO
    if(cto == address(0)) {
        require(msg.sender == owner);
    }else{
        require(msg.sender == cto);
    }
    emit OwnershipTransferred(cto, newCTO);
    cto = newCTO;
  }

  function whoisCEO() public view returns (address){
      return ceo;
  }
  function whoisCTO() public view returns (address){
      return cto;
  }
  function whoisCFO() public view returns (address){
      return cfo;
  }

}

